{
  // --- 基本設定 ---
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,

  // --- C# 設定 ---
  "[csharp]": {
    "editor.defaultFormatter": "ms-dotnettools.csharp",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },

  // --- XAML 設定 ---
  "[xaml]": {
    // ここをインストール済みのIDに合わせます
    "editor.defaultFormatter": "dabbinavo.xamlstyler"
  },

  // --- indent-rainbow 設定 (赤色エラー消し) ---
  "indentRainbow.errorColor": "rgba(0,0,0,0)",
  "indentRainbow.ignoreErrorLanguages": ["*"],

  // --- XAML Styler (整形のルール) ---
  "xamlStyler.attributesTolerance": 1,
  "xamlStyler.maxAttributesPerLine": 1,
  "xamlStyler.keepFirstAttributeOnSameLine": true,
  "xamlStyler.putEndingBracketOnNewLine": true,
  "xamlStyler.reorderAttributes": true
}
