<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="NssOrderTool.Views.CycleConfirmationDialog"
        Title="矛盾の確認"
        Width="450" Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="BorderOnly">

	<Grid RowDefinitions="Auto, *, Auto" Margin="20">
		<StackPanel Grid.Row="0" Spacing="10">
			<StackPanel Orientation="Horizontal" Spacing="10">
				<TextBlock Text="⚠️" FontSize="24" VerticalAlignment="Center"/>
				<TextBlock Text="入力により順序矛盾が発生します" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Foreground="#D58000"/>
			</StackPanel>

			<TextBlock Text="以下の入力により、既存データとの間でループ（閉路）が発生します。"
                       TextWrapping="Wrap" FontSize="12"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Spacing="15" Margin="0,15">
			<Border Background="#F9F9F9" Padding="10" CornerRadius="5" BorderBrush="#EEEEEE" BorderThickness="1">
				<StackPanel>
					<TextBlock Text="あなたの入力:" FontWeight="Bold" FontSize="11" Foreground="Gray"/>
					<TextBlock Name="InputTextBlock" Text="A, B" FontWeight="Bold" Margin="0,5,0,0"/>
				</StackPanel>
			</Border>

			<Border Background="#FFF4F4" Padding="10" CornerRadius="5" BorderBrush="#FFCCCC" BorderThickness="1">
				<StackPanel>
					<TextBlock Text="発生する矛盾（ループ）:" FontWeight="Bold" FontSize="11" Foreground="Red"/>
					<TextBlock Name="CycleTextBlock" Text="A -> B -> C -> A" TextWrapping="Wrap" Margin="0,5,0,0" Foreground="#CC0000"/>
				</StackPanel>
			</Border>

			<TextBlock Text="登録すると、これらのプレイヤーは「同順位」として扱われます。"
                       TextWrapping="Wrap" FontSize="11" Foreground="Gray"/>
		</StackPanel>

		<StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10">
			<Button Name="CancelButton" Content="入力をやり直す" Click="CancelButton_Click"/>
			<Button Name="RegisterButton" Content="このまま登録する" Background="#D58000" Foreground="White" FontWeight="Bold" Click="RegisterButton_Click"/>
		</StackPanel>
	</Grid>
</Window>