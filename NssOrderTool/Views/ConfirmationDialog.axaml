<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="150"
        x:Class="NssOrderTool.Views.ConfirmationDialog"
        Title="確認"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        SystemDecorations="BorderOnly">
	<Grid RowDefinitions="*, Auto" Margin="20">
		<StackPanel Grid.Row="0" VerticalAlignment="Center" Spacing="10">
			<TextBlock Text="⚠️ 警告" FontWeight="Bold" Foreground="Red" HorizontalAlignment="Center"/>
			<TextBlock Text="本当に全データを削除しますか？&#x0a;この操作は取り消せません。"
                       TextAlignment="Center" TextWrapping="Wrap"/>
		</StackPanel>

		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="20" Margin="0,10,0,0">
			<Button Name="CancelButton" Content="キャンセル" Width="80" Click="CancelButton_Click"/>

			<Button Name="OkButton" Content="削除する" Width="80"
                    Background="#FFCCCC" Foreground="Red" FontWeight="Bold"
                    Click="OkButton_Click"/>
		</StackPanel>
	</Grid>
</Window>