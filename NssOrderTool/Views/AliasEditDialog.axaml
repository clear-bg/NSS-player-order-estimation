<Window
  x:Class="NssOrderTool.Views.AliasEditDialog"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:vm="using:NssOrderTool.ViewModels"
  x:Name="DialogRoot"
  Title="エイリアス編集"
  Width="400"
  Height="300"
  d:DesignHeight="300"
  d:DesignWidth="400"
  x:DataType="vm:AliasEditViewModel"
  WindowStartupLocation="CenterOwner"
  mc:Ignorable="d">
  <Grid Margin="15" RowDefinitions="Auto, *, Auto">
    <StackPanel
      Grid.Row="0"
      Margin="0,0,0,10"
      Spacing="5">
      <TextBlock
        FontSize="16"
        FontWeight="Bold"
        Text="✏️ エイリアス個別編集" />
      <StackPanel Orientation="Horizontal" Spacing="5">
        <TextBlock FontWeight="Bold" Text="正規名:" />
        <TextBlock Foreground="Blue" Text="{Binding TargetName}" />
      </StackPanel>
    </StackPanel>

    <ListBox
      Grid.Row="1"
      Background="#F0F0F0"
      ItemsSource="{Binding Aliases}">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Grid ColumnDefinitions="*, Auto">
            <TextBlock
              Grid.Column="0"
              VerticalAlignment="Center"
              Foreground="Black"
              Text="{Binding}" />

            <Button
              Grid.Column="1"
              Padding="8,4"
              Background="#FFCCCC"
              Command="{Binding #DialogRoot.((vm:AliasEditViewModel)DataContext).DeleteAliasCommand}"
              CommandParameter="{Binding}"
              Content="削除"
              FontSize="10"
              Foreground="Red" />
          </Grid>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>

    <Button
      Grid.Row="2"
      Margin="0,10,0,0"
      HorizontalAlignment="Right"
      Click="CloseButton_Click"
      Content="閉じる" />
  </Grid>
</Window>
