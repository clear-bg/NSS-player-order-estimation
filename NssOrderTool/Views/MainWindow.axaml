<Window
  x:Class="NssOrderTool.Views.MainWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:views="using:NssOrderTool.Views"
  xmlns:vm="using:NssOrderTool.ViewModels"
  Title="{Binding Title}"
  Width="880"
  Height="580"
  d:DesignHeight="550"
  d:DesignWidth="800"
  x:DataType="vm:MainWindowViewModel"
  WindowStartupLocation="CenterScreen"
  mc:Ignorable="d">

  <TabControl Margin="5">
    <TabItem FontSize="16" Header="メイン">
      <views:OrderEstimationView />
    </TabItem>

    <TabItem FontSize="16" Header="順序推定">
      <views:SimulationView />
    </TabItem>

    <TabItem FontSize="16" Header="アリーナ集計">
      <views:ArenaView />
    </TabItem>

    <TabItem FontSize="16" Header="エイリアス">
      <views:AliasSettingsView />
    </TabItem>

    <TabItem FontSize="16" Header="設定">
      <views:SettingsView />
    </TabItem>
  </TabControl>
</Window>
