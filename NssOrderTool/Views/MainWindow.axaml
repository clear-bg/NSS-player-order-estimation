<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:NssOrderTool.Views"
        xmlns:vm="using:NssOrderTool.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="550"
        x:Class="NssOrderTool.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="{Binding Title}"
        Width="800" Height="550"
        WindowStartupLocation="CenterScreen">

	<TabControl Margin="5">
		<TabItem Header="メイン" FontSize="16">
			<views:OrderEstimationView />
		</TabItem>

		<TabItem Header="エイリアス" FontSize="16">
			<views:AliasSettingsView />
		</TabItem>

		<TabItem Header="設定" FontSize="16">
			<views:SettingsView />
		</TabItem>
	</TabControl>
</Window>